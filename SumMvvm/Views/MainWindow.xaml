<Window x:Class="SumMvvm.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SumMvvm"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding X}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Y}" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.325,1.783" Margin="135,10,0,0"/>
        <Button x:Name="button" Content="Sum" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top" Width="75" Command="{Binding SumCommand}"/>
        <TextBox x:Name="textBoxZ" HorizontalAlignment="Left" Height="23" Margin="83,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Z}"/>

    </Grid>
</Window>
